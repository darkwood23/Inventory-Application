extends layout 

block content 
    h1 #{title}: #{category.title}

    if category_item.length 
        p #[strong Delete the following items before deleting this category]

        div(style='margin-left:20px;margin-top:20px')

            h4 Items 
            dl 
            each item in category_item 
                dt 
                    a(href=item.url) #{item.title}
                dd #{item.description} $#{item.price}
    
    else 
        p Do you really want to delete this category?

        form(action='', method='POST')
            .form-group 
                input#categoryid.form-control(type='hidden', name='categoryid', required='true', value=category._id )
            button.btn.btn-primary(type='submit') Delete 
            