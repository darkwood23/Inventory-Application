extends layout 

block content 
    h1 #{title} 

    form(method='POST' action='')
        .form-group 
            label(for='title') Title: 
            input#title.form-control(type='text', placeholder='computer, storage device etc.', name='title', value=(undefined=== category ? '' : category.title ))
        button.btn.btn-primary(type='submit') Submit 
    
    if errors 
        ul 
            for errors in errors
                li!= error.msg